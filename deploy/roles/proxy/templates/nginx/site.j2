# site configuration
{% if SSL_TYPE == 'customssl'  %} 
server {
    listen 80 default_server;
    server_name {{ fqdn }};
    if ($host != "{{ fqdn }}") {
    return 444;
      }
    # return 301 https://$host$request_uri;
    location / {
        rewrite ^ https://{{ fqdn }}$request_uri? permanent;
    }
  }
{% endif %} 
server {
  listen 443 ssl;
  ssl_stapling on;
  ssl_stapling_verify  on;
  server_name {{ fqdn }};
  {% if SSL_TYPE == 'letsencrypt' %} 
  ssl_certificate /etc/letsencrypt/live/{{fqdn}}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{fqdn}}/privkey.pem;
  {% elif SSL_TYPE == 'customssl' %}
  ssl_certificate /etc/ssl/{{ fqdn }}/fullchain.pem;
  ssl_certificate_key /etc/ssl/{{ fqdn }}/privkey.pem;
  {% endif %}
  ssl_protocols TLSv1.2 TLSv1.3;
  #ssl_session_cache shared:SSL:20m;
  ssl_session_timeout 10h;
  ssl_dhparam /etc/nginx/dhparams.pem;
  ssl_prefer_server_ciphers on;
  underscores_in_headers on;
  {#- add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;#}
  add_header Referrer-Policy "no-referrer";
  add_header X-XSS-Protection "1; mode=block" always;
  keepalive_timeout 10;
  send_timeout 10;
  error_log /var/log/nginx/error.log info;
  ssl_session_tickets off;
  client_body_timeout 10;
  client_header_timeout 10;
  client_max_body_size 100M;
  proxy_set_header X-Frame-Options "SAMEORIGIN";
# This is quite strict.  If you have much older windoze browsers
  ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';
  if ($host != "{{ fqdn }}") {
    return 444;
    }
  # Proxy pass to the backend 
  # Location configuration 
      include  conf.d/dhis2-location;
  {% if server_monitoring is defined %}
      include conf.d/{{server_monitoring}}-location;
  {% endif %}
  {% if app_monitoring is defined %}
      include conf.d/{{app_monitoring}}-location;
  {% endif %}
location / {
  return 444; 
  }
}

